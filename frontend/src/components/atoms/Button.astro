---
interface Props {
  text: string;
  variant: "color" | "void"
  onclick?  : (() => void )| string
}

const { text, variant , onclick} = Astro.props;
---

<button class={"font-bold py-2 px-6 rounded-md text-sm" + variant === "color" ? "bg-green text-white " : "border text-black font-semibold py-2 px-6 rounded-md text-sm"} onclick={onclick}>
    <b>{text.toUpperCase()}</b>
</button> 