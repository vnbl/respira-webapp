---
interface Props {
  variant:
    | 'h1'
    | 'h2'
    | 'h3'
    | 'h4'
    | 'h5'
    | 'h6'
    | 'label'
    | 'p'
    | 'p-sm'
    | 'nav'
    | 'h5-2'
  color?: string
  customClass?: string
}

const { variant, color, customClass = '' } = Astro.props
---

{
  variant === 'h1' && (
    <h1
      class={
        `font-serif text-[2.8rem] font-bold text-${color || 'black'} ` +
        customClass
      }
    >
      <slot />
    </h1>
  )
}
{
  variant === 'h2' && (
    <h2
      class={
        `font-serif text-[2.1rem] font-bold text-${color || 'black'} ` +
        customClass
      }
    >
      <slot />
    </h2>
  )
}
{
  variant === 'h3' && (
    <h3
      class={
        `font-sans text-[1.875rem] font-semibold text-${color || 'black'} ` +
        customClass
      }
    >
      <slot />
    </h3>
  )
}
{
  variant === 'h4' && (
    <h4 class={'font-serif text-[1.56rem] font-bold text-gray ' + customClass}>
      <slot />
    </h4>
  )
}
{
  variant === 'h5' && (
    <h5
      class={
        `font-sans text-[1.25rem] font-bold text-${color ? color : 'black'} uppercase ` +
        customClass
      }
    >
      <slot />
    </h5>
  )
}
{
  variant === 'h6' && (
    <h6
      class={
        `font-sans text-[1rem] font-semibold text-${color ? color : 'black'} ` +
        customClass
      }
    >
      <slot />
    </h6>
  )
}

{
  variant === 'p' && (
    <p class={`font-sans text-[1rem] text-${color || 'black'} ` + customClass}>
      <slot />
    </p>
  )
}

{
  variant === 'label' && (
    <p class={'font-sans text-[1rem] font-semibold italic ' + customClass}>
      <slot />
    </p>
  )
}

{
  variant === 'p-sm' && (
    <p
      class={`font-sans text-[0.75rem] text-${color || 'black'} ` + customClass}
    >
      <slot />
    </p>
  )
}

{
  variant === 'nav' && (
    <h6
      class={
        `font-serif text-[1rem] font-bold text-${color || 'black'} ` +
        customClass
      }
    >
      <slot />
    </h6>
  )
}

{
  variant === 'h5-2' && (
    <h5
      class={
        `font-serif text-[1.25rem] font-bold text-${color ? color : 'black'} ` +
        customClass
      }
    >
      <slot />
    </h5>
  )
}
