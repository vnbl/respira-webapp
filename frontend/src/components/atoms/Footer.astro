---
import { Image } from 'astro:assets'
import { FOOTER_IMAGES, SOCIAL_MEDIA_IMAGES } from '../../data/images'
import Typography from './Typography.astro'
import { CONTACT_MAIL } from '../../data/constants'
import { FOOTER_MENU } from '../../data/menu'
---

<div
  class="flex h-auto w-full flex-col-reverse bg-black p-12 md:flex-row md:p-36"
>
  <div class="flex w-full flex-col md:mr-44">
    <p class="font-serif text-xl font-bold text-white">Una colaboraci√≥n de</p>
    <div class="grid max-w-sm text-white md:mt-8 md:grid-cols-4 md:divide-x">
      {
        FOOTER_IMAGES.map((image) => (
          <div class="flex py-4 first:justify-start first:pl-0 even:col-span-2 md:justify-center md:px-4 md:py-0">
            <Image alt={image.alt} src={image.path} class={image.class} />
          </div>
        ))
      }
    </div>
    <p class="mt-8 text-white md:mt-4">
      Escribinos a <a
        href=`https://mail.google.com/mail/?view=cm&fs=1&tf=1&to=${CONTACT_MAIL}`
        target="_blank"><b class="text-lg"><u>{CONTACT_MAIL}</u></b></a
      >
    </p>

    <div class="flex flex-row gap-1 text-center md:mt-4 md:align-middle">
      <p class="text-center text-white">Seguinos en</p>
      {
        SOCIAL_MEDIA_IMAGES.map((img) => (
          <a href={img.link} target="_blank">
            <Image alt={img.alt} src={img.path} class={img.class} />
          </a>
        ))
      }
    </div>
  </div>
  <div class="flex grid w-full gap-4 py-8 md:grid-cols-2">
    {
      FOOTER_MENU.map((item) => {
        if (typeof item.route !== 'string') {
          return (
            <div>
              <Typography
                variant="h4"
                customClass="text-white opacity-70 text-xl"
              >
                {item.title}
              </Typography>
              {item.route.map((i) => (
                <a href={import.meta.env.SITE + i.route}>
                  <p class="pt-6 font-sans text-lg text-white">{i.title}</p>
                </a>
              ))}
            </div>
          )
        } else {
          ;<a href={import.meta.env.SITE + item.route}>
            <p class="pt-6 font-sans text-lg text-white">{item.title}</p>
          </a>
        }
      })
    }
  </div>
</div>
