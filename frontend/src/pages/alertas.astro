---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/atoms/Footer.astro";
import TwitterCard from "../components/cards/TwitterCard.astro";
import TelegramCard from "../components/cards/TelegramCard.astro";
import Button from "../components/atoms/Button.astro";
---

<BaseLayout>
    <script>
        // redirect if path accessed on computer
        if(window.innerWidth > 640) {
            window.open(import.meta.env.BASE_URL,"_self","","")
        }
    </script>
    <section class="p-6 space-y-6 flex flex-col md:hidden"  >
        <TelegramCard />
        <TwitterCard />
        <Button text="Ir al mapa" variant="void" onclick=`window.open("${import.meta.env.BASE_URL}","_self","","")`/>
    </section>

    <Footer  class="md:hidden"/>
</BaseLayout>
